#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
display_board(board)
puts "Where would you like to go? From 1-9"
input = gets.strip

convert = input_to_index(input)

puts "You selected #{convert}"

move(board, convert)

display_board(board)
